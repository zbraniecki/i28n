{
  "name": "i28n",
  "description": "An internationalization library for Firefox OS",
  "version": "0.0.1",
  "homepage": "http://l20n.org",
  "author": "Mozilla <l10n-drivers@mozilla.org>",
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Zibi Braniecki",
      "email": "zbraniecki@mozilla.com"
    },
    {
      "name": "Staś Małolepszy",
      "email": "stas@mozilla.com"
    }
  ],
  "bugs": "https://bugzilla.mozilla.org/enter_bug.cgi?product=Firefox%20OS&component=Gaia::L10n",
  "scripts": {
    "test": "grunt lint test"
  },
  "directories": {
    "lib": "./src"
  },
  "main": "./dist/web/i28n.js",
  "browser": "./dist/web/i28n.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/zbraniecki/i28n.git"
  },
  "keywords": [
    "internationalization",
    "i28n"
  ],
  "devDependencies": {
    "del": "^2.0.2",
    "gulp": "^3.9.0",
    "gulp-eslint": "^1.0.0",
    "gulp-plumber": "^1.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-rollup": "^1.0.1"
  },
  "engine": {
    "node": ">=5.0"
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "modules": true
    },
    "env": {
      "es6": true
    },
    "rules": {
       "valid-typeof": 1,
       "no-console": 1,
       "no-dupe-args": 2,
       "no-dupe-keys": 2,
       "no-duplicate-case": 2,
       "no-extra-semi": 1,
       "no-unreachable": 1,
       "complexity": 1,
       "consistent-return": 2,
       "curly": [2, "multi-line"],
       "eqeqeq": 2,
       "no-extend-native": 2,
       "no-extra-bind": 1,
       "no-redeclare": 2,
       "array-bracket-spacing": 2,
       "brace-style": [2, "1tbs"],
       "no-mixed-spaces-and-tabs": 2,
       "prefer-arrow-callback": 1,
       "prefer-const": 1,
       "prefer-template": 1,
       "prefer-spread": 1,
       "strict": [2, "never"],
       "quotes": [2, "single"],
       "no-var": 1
    }
  }
}
